{
  "compilerOptions": {
    "preserveWatchOutput": true,
    "lib": ["ESNext"],
    "typeRoots": ["./"],
    "types": ["./global.d.ts"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "diagnostics": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"]
}
