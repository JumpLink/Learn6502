<GridLayout xmlns="http://schemas.nativescript.org/tns.xsd"
    rows="auto, *"
    columns="auto, *"
    height="100%" width="100%"
    class="bg-surface">
    <TextView id="lineNumbersView"
        row="0" col="0" rowSpan="2"
        editable="false"
        fontFamily="monospace"
        color="#888888"
        height="100%"
        visibility="{{ lineNumbers ? 'visible' : 'collapse' }}"
        class="text-base p-0 m-0 vertical-top w-10 no-underline" />
    <TextView id="textView"
        row="0" col="1" rowSpan="2"
        editable="{{ editable }}"
        fontFamily="monospace"
        color="#ffffff"
        height="100%"
        class="text-base p-0 m-0 vertical-top no-underline" />
    <Button id="copyButton"
        row="0" col="1"
        horizontalAlignment="right"
        verticalAlignment="top"
        text="COPY"
        visibility="{{ copyable ? 'visible' : 'collapse' }}"
        class="m-2 p-2" />
</GridLayout>