using Gtk 4.0;
using Adw 1;
// This template is based on a Workbench example and just a example of how to use the Adw.PreferencesDialog
template $PreferencesDialog: Adw.PreferencesDialog {
  content-width: 800;
  content-height: 600;
  title: _("Preferences");

  Adw.PreferencesPage mainPage {
    title: _("Appearance");
    icon-name: "brush-monitor-symbolic";

    Adw.PreferencesGroup {
      title: _("Main Settings");
      description: _("There are currently no settings.");
    }
  }
}
