using Gtk 4.0;
using Adw 1;

template $Learn: Adw.Bin {
  height-request: 200;
  vexpand: true;
  Adw.StatusPage statusPage {
    title: _("Learn");
    description: _("Learn how to program the 6502 microprocessor.");
    icon-name: "school-symbolic";
    Adw.Clamp {
      maximum-size: 600;
      margin-top: 12;
      margin-bottom: 12;
      margin-start: 12;
      margin-end: 12;

      child: $TutorialView tutorialView {};
    }
  }
}
